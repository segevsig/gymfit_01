<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="segev.gimfit.login"
    android:background="@drawable/gradient_background2">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Step 1 : Gender"
        android:textSize="30dp"
        android:gravity="center"
        android:includeFontPadding="false"/>

    <Button
        android:id="@+id/button_male"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="59dp"
        android:text="Male"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textAlignment="textStart"
        android:drawableRight="@drawable/ic_action_name"



        />
    <Button
        android:id="@+id/button_female"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/button_male"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Female"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:drawableRight="@drawable/ic_action_women"
        android:textAlignment="textStart"
    />



</RelativeLayout>


