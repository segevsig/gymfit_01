<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="66dp"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/stepof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/type"
        android:layout_below="@+id/type"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/dateevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/type"
        android:layout_alignBottom="@+id/type"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/type"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dateevent"
        android:layout_alignTop="@+id/stepof"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stepof"
        android:layout_below="@+id/stepof"
        android:layout_marginTop="27dp"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/calories"
        android:layout_alignTop="@+id/hour"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/timeoftr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateevent"
        android:layout_alignBottom="@+id/dateevent"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/dateevent"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hour"
        android:layout_alignStart="@+id/timeoftr"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/distance"
        android:layout_alignTop="@+id/minute"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/discption"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/dateevent"
        android:layout_alignEnd="@+id/timeoftr"
        android:layout_marginEnd="14dp"
        android:text="TextView"
        android:textSize="15dp"
        android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>