<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="segev.gimfit.have_accuont"
    android:layoutDirection="ltr"
    android:background="@drawable/background3"
    android:id="@+id/relativeLayout">

    <EditText
        android:id="@+id/user_name_login_ID"
        android:layout_width="316dp"
        android:layout_height="55dp"
        android:layout_marginBottom="273dp"
        android:background="#11000000"
        android:drawableEnd="@drawable/mail_image"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="361dp"
        app:layout_constraintStart_toStartOf="@+id/password_login_ID"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/password_login_ID"
        android:layout_width="316dp"
        android:layout_height="55dp"
        android:layout_marginTop="68dp"
        android:background="#11000000"
        android:drawableEnd="@drawable/ic_action_lock"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="361dp"
        app:layout_constraintTop_toTopOf="@+id/user_name_login_ID"
        app:layout_constraintStart_toStartOf="@+id/cardView" />

    <android.support.v7.widget.CardView
        android:layout_width="316dp"
        android:layout_height="55dp"
        android:layout_marginTop="58dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#f442ce"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/password_login_ID"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RelativeLayout
            android:id="@+id/log_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Login"
                android:textStyle="bold"
                android:textSize="20dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
